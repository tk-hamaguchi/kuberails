apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: <%= namespace %>
  name: <%= name.parameterize[0..62] %>
  labels:
    app.kubernetes.io/name: <%= name.parameterize %>
    app.kubernetes.io/managed-by: kuberails
spec:
  replicas: 2
  selector:
    matchLabels:
      app.kubernetes.io/name: <%= name.parameterize %>
  template:
    metadata:
      labels:
        app.kubernetes.io/name: <%= name.parameterize %>
    spec:
      containers:
        - name: <%= name.parameterize[0..62] %>
          image: "nginx:stable"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
          resources: {}
